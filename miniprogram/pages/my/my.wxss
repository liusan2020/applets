page {
  width: 100%;
  height: 100%;
  background-color: rgba(161, 159, 159, 0.13);
}
.user_info_wrap {
  width: 100%;
}
.user_info_wrap .user_bg {
  position: relative;
  width: 100%;
  height: 40vh;
  overflow: hidden;
}
.user_info_wrap .user_bg .bg_img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 41vh;
  background-color: var(--themeColor);
  -webkit-filter: blur(4px);
  filter: blur(4px);
}
.user_info_wrap .user_bg .username_img {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  text-align: center;
}
.user_info_wrap .user_bg .username_img image {
  margin-top: 63rpx;
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
}
.user_info_wrap .user_bg .username_img view {
  margin-top: 50rpx;
  color: rgba(117, 116, 116, 0.84);
  font-weight: 700;
}
.user_info_wrap .user_bg .login_btn {
  margin-top: 171rpx;
}
.user_info_wrap .user_bg .login_btn button {
  width: 30%;
  border: 1px solid #fff;
  background: transparent;
  color: #fff;
}
.user_info_wrap .user_info {
  padding: 0 20rpx;
  width: 100%;
}
.user_info_wrap .user_info .top_bar {
  display: flex;
  width: 100%;
  background-color: #fff;
  padding: 5rpx 0 15rpx 0;
  transform: translateY(-50%);
}
.user_info_wrap .user_info .top_bar .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.user_info_wrap .order_wrap .order_titel {
  transform: translateY(-35%);
  margin-bottom: 5rpx;
  padding: 20rpx 0 20rpx 20rpx;
  background-color: #fff;
}
.user_info_wrap .order_wrap .order_bar {
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
  transform: translateY(-24%);
}
.user_info_wrap .order_wrap .order_bar .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.user_info_wrap .order_wrap .order_bar .item image {
  width: 50rpx;
  height: 50rpx;
}
.user_info_wrap .order_wrap .other {
  background-color: #fff;
  padding: 20rpx 0 20rpx 20rpx;
  margin-bottom: 5rpx;
}
.user_info_wrap .order_wrap .manage_addr {
  transform: translateY(-18%);
  margin: 10rpx 0;
}
