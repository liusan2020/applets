.index_swiper swiper {
  height: 340rpx;
}
.index_swiper swiper image {
  width: 100%;
}
.friut_nav {
  display: flex;
}
.friut_nav navigator {
  padding: 30rpx;
  flex: 1;
  text-align: center;
}
.friut_nav navigator image {
  width: 100%;
  margin-bottom: 20rpx;
}
.goods_sale {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.goods_sale .sale_title {
  width: 255rpx;
  height: 70rpx;
}
.goods_sale .sale_title image {
  width: 100%;
  vertical-align: middle;
}
.goods_sale .refresh {
  line-height: 70rpx;
}
.hot_goods {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx;
  justify-content: space-between;
  background-color: rgba(177, 166, 166, 0.13);
}
.hot_goods navigator {
  margin-bottom: 15rpx;
  width: 49%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.hot_goods navigator > view:nth-child(1) image {
  width: 100%;
}
.hot_goods navigator > view:nth-child(2) {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0 20rpx 0;
}
.hot_goods navigator > view:nth-child(2) > view:nth-child(2) text:nth-child(1) {
  text-decoration: line-through;
}
.hot_goods navigator > view:nth-child(2) > view:nth-child(2) text:nth-child(2) {
  padding-left: 15rpx;
  color: red;
}
.recommend_goods {
  padding: 0 30rpx;
}
.recommend_goods navigator {
  overflow: hidden;
  border-radius: 10rpx;
  margin-bottom: 26rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.4);
}
.recommend_goods navigator .goods_img {
  display: flex;
  width: 100%;
}
.recommend_goods navigator .goods_img .gimg1 {
  flex: 1;
}
.recommend_goods navigator .goods_img .gimg1 image {
  width: 100%;
  height: 100%;
  border-right: 9rpx solid #fff;
}
.recommend_goods navigator .goods_img .gimg2 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommend_goods navigator .goods_img .gimg2 view {
  flex: 1;
}
.recommend_goods navigator .goods_img .gimg2 view image {
  width: 100%;
  height: 100%;
  border-bottom: 9rpx solid #fff;
}
.recommend_goods navigator .description {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.recommend_goods navigator .description .des1 {
  font-weight: 700;
}
.recommend_goods navigator .description .des2 {
  color: #ff0000;
}
