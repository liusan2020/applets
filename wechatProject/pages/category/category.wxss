page {
  height: 100%;
}
.category_index {
  height: 100%;
}
.category_index .container {
  height: calc(100vh - 90rpx);
  display: flex;
  background-color: rgba(163, 159, 159, 0.15);
}
.category_index .container .left_menu {
  flex: 2;
}
.category_index .container .left_menu view {
  padding: 30rpx 0 30rpx 15rpx;
  border-bottom: 1px solid rgba(138, 132, 132, 0.192);
}
.category_index .container .left_menu view image {
  width: 50rpx;
  border-radius: 50%;
  vertical-align: bottom;
}
.category_index .container .left_menu view text {
  padding-left: 15rpx;
  font-size: 32rpx;
}
.category_index .container .right_goods {
  flex: 5;
  background-color: #fff;
}
.category_index .container .right_goods .g_info {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid rgba(165, 163, 163, 0.15);
}
.category_index .container .right_goods .g_info .g_img {
  flex: 3;
}
.category_index .container .right_goods .g_info .g_img image {
  border-radius: 10rpx;
  width: 100%;
}
.category_index .container .right_goods .g_info .g_title {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 5rpx 0 5rpx 20rpx;
}
.category_index .container .right_goods .g_info .g_title .name_price view {
  padding-bottom: 5rpx;
}
.category_index .container .right_goods .g_info .g_title .name_price view:nth-child(1) {
  font-size: 32rpx;
  font-weight: 700;
}
.category_index .container .right_goods .g_info .g_title .name_price view:nth-child(2) {
  text-decoration: line-through;
}
.category_index .container .right_goods .g_info .g_title .name_price view:nth-child(3) {
  font-weight: 700;
  color: #ff0000;
}
.category_index .container .right_goods .g_info .g_title .add_cart {
  display: flex;
  justify-content: space-between;
  padding-right: 15rpx;
  align-items: flex-end;
}
.category_index .container .right_goods .g_info .g_title .add_cart image {
  width: 50rpx;
}
.menu-on {
  padding-left: 5rpx!important;
  border-left: 10rpx solid #A2CCFF !important;
  color: #A2CCFF !important;
  background-color: #fff;
}
